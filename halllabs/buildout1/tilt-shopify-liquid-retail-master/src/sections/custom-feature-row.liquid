<!-- start widget -->
<div class="page-width feature-row">
  {% capture image_layout %}
    <div class="feature-row__item">
      {% if section.settings.image != blank %}
        {% capture img_id %}FeatureRowImage-{{ section.id }}{% endcapture %}
        {% capture wrapper_id %}FeatureRowImageWrapper-{{ section.id }}{% endcapture %}
        {%- assign img_url = section.settings.image | img_url: '1x1' | replace: '_1x1.', '_{width}x.' -%}
        {% include 'image-style' with image: section.settings.image, width: 545, height: 545, small_style: true, wrapper_id: wrapper_id, img_id: img_id %}
        <div id="{{ wrapper_id }}" class="feature-row__image-wrapper js">
          <div style="padding-top:{{ 1 | divided_by: section.settings.image.aspect_ratio | times: 100}}%;">
            <img id="{{ img_id }}"
                 class="feature-row__image lazyload"
                 src="{{ section.settings.image | img_url: '600x600' }}"
                 alt="{{ section.settings.image.alt | escape }}">
          </div>
        </div>

        <noscript>
          {{ section.settings.image | img_url: '600x600', scale: 2 | img_tag: section.settings.image.alt, 'feature-row__image' }}
        </noscript>
      {% else %}
        {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
      {% endif %}
    </div>
  {% endcapture %}

  <div class="feature-row">
    {% if section.settings.layout == 'left' %}
      {{ image_layout }}
    {% endif %}

    <div class="feature-row__item feature-row__text feature-row__text--{{ section.settings.layout }}">
      {% if section.settings.title != blank %}
        <h2 class="h3" style="font-size: 49px;">{{ section.settings.title | escape }}</h2>
      {% endif %}
      {% if section.settings.text != blank %}
        <div class="custom-feature-row-subtext">
          <ul>
            <li style="list-style: circle">
              <h4 id="list-item-one" style="font-size: 1.4em;margin: 10px;color: #00adef;">
                <a href="javascript:void(0)" onmouseover="indexOneClicked()">
                 {{ section.settings.image_text }}
                </a>
              </h4>
            </li>
            <li style="list-style: circle">
              <h4 id="list-item-two" style="font-size: 1.4em;margin: 10px;"><a href="javascript:void(0)" onmouseover="indexTwoClicked()">{{ section.settings.image_text1 }}</a></h4>
            </li>
            <li style="list-style: circle">
              <h4 id="list-item-three" style="font-size: 1.4em;margin: 10px;"><a href="javascript:void(0)" onmouseover="indexThreeClicked()">{{ section.settings.image_text2 }}</a></h4>
            </li>
            <li style="list-style: circle">
              <h4 id="list-item-four" style="font-size: 1.4em;margin: 10px;"><a href="javascript:void(0)" onmouseover="indexFourClicked()">{{ section.settings.image_text3 }}</a></h4>
            </li>
            <li style="list-style: circle">
              <h4 id="list-item-five" style="font-size: 1.4em;margin: 10px;"><a href="javascript:void(0)" onmouseover="indexFiveClicked()">{{ section.settings.image_text4 }}</a></h4>
            </li>
          </ul>
        </div>
      
      {% endif %}
      {% if section.settings.button_label != blank and section.settings.button_link != blank %}
        <!--<a href="{{ section.settings.button_link }}" class="btn" style="background: url('https://cdn.shopify.com/s/files/1/2330/0585/files/applestore.png?9631039859292085082');background-position: center;background-size:cover;background-repeat:no-repeat;width:189px;height:56px;">-->
        <a href="#" class="btn" style="background: url('https://cdn.shopify.com/s/files/1/2330/0585/files/applestore.png?9631039859292085082');background-position: center;background-size:cover;background-repeat:no-repeat;width:189px;height:56px;">
          
        </a>
      {% endif %}
      {% if section.settings.button_label2 != blank and section.settings.button_link2 != blank %}
        <!--<a href="{{ section.settings.button_link2 }}" class="btn" style="background: url('https://cdn.shopify.com/s/files/1/2330/0585/files/googlestore.png?9631039859292085082');background-position: center;background-size:cover;background-repeat:no-repeat;width:189px;height:56px;">-->
        <a href="#" class="btn" style="background: url('https://cdn.shopify.com/s/files/1/2330/0585/files/googlestore.png?9631039859292085082');background-position: center;background-size:cover;background-repeat:no-repeat;width:189px;height:56px;">
          
        </a>
      {% endif %}
    </div>

    {% if section.settings.layout == 'right' %}
      {{ image_layout }}
    {% endif %}
    
    
    <script>
      var selectedIndex = 0;
      
      function indexOneClicked(){
        selectedIndex = 0;
        document.getElementById("list-item-one").style.color = "#00adef";
        document.getElementById("list-item-two").style.color = "black";
        document.getElementById("list-item-three").style.color = "black";
        document.getElementById("list-item-four").style.color = "black";
        document.getElementById("list-item-five").style.color = "black";
        updateImage();
      }
      
      function indexTwoClicked(){
        selectedIndex = 1;
        document.getElementById("list-item-one").style.color = "black";
        document.getElementById("list-item-two").style.color = "#00adef";
        document.getElementById("list-item-three").style.color = "black";
        document.getElementById("list-item-four").style.color = "black";
        document.getElementById("list-item-five").style.color = "black";
        updateImage();
      }
      
      function indexThreeClicked(){
        selectedIndex = 2;
        document.getElementById("list-item-one").style.color = "black";
        document.getElementById("list-item-two").style.color = "black";
        document.getElementById("list-item-three").style.color = "#00adef";
        document.getElementById("list-item-four").style.color = "black";
        document.getElementById("list-item-five").style.color = "black";
        updateImage();
      }
      
      function indexFourClicked(){
        selectedIndex = 3;
        document.getElementById("list-item-one").style.color = "black";
        document.getElementById("list-item-two").style.color = "black";
        document.getElementById("list-item-three").style.color = "black";
        document.getElementById("list-item-four").style.color = "#00adef";
        document.getElementById("list-item-five").style.color = "black";
        updateImage();
      }
      
      function indexFiveClicked(){
        selectedIndex = 4;
        document.getElementById("list-item-one").style.color = "black";
        document.getElementById("list-item-two").style.color = "black";
        document.getElementById("list-item-three").style.color = "black";
        document.getElementById("list-item-four").style.color = "black";
        document.getElementById("list-item-five").style.color = "#00adef";
        updateImage();
      }
      
      function updateImage(){
        var image = document.getElementById("FeatureRowImage-{{ section.id }}");
        if (selectedIndex == 0){
          image.src = "{{ section.settings.image | img_url: '600x600' }}"

        }
        else if (selectedIndex == 1) {
          image.src = "{{ section.settings.image1 | img_url: '600x600' }}"

        }
        else if (selectedIndex == 2) {
          image.src = "{{ section.settings.image2 | img_url: '600x600' }}"

        }
        else if (selectedIndex == 3) {
          image.src = "{{ section.settings.image3 | img_url: '600x600' }}"

        }
        else if (selectedIndex == 4) {
          image.src = "{{ section.settings.image4 | img_url: '600x600' }}"

        }
      }
      
    </script>
    
  </div>
  
      
</div>
<!-- end widget -->
